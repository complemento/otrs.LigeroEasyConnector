<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="GenericInterface::Invoker::Module###OTRS::ArticleSend" Required="0" Valid="1">
        <Description Translatable="1">Send Article to Other OTRS System.</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>GenericInterface::Invoker::ModuleRegistration</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Name">ArticleSend</Item>
                <Item Key="Controller">OTRS</Item>
                <Item Key="ConfigDialog">AdminGenericInterfaceInvokerDefault</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="GenericInterface::Invoker::Module###OTRS::RemoteQueueUpdate" Required="0" Valid="1">
        <Description Translatable="1">Updates remote queue based on RemoteQueue dynamic field update (you need to create this dynamic field as a dropdown).</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>GenericInterface::Invoker::ModuleRegistration</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Name">RemoteQueueUpdate</Item>
                <Item Key="Controller">OTRS</Item>
                <Item Key="ConfigDialog">AdminGenericInterfaceInvokerDefault</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="GenericInterface::Invoker::Module###OTRS::RemoteTicketUpdate" Required="0" Valid="1">
        <Description Translatable="1">Update remote ticket based on any event you want. You need to configure all the information on the invoker mapping, such as remote ticket ID and the remote information to be updated.</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>GenericInterface::Invoker::ModuleRegistration</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Name">RemoteTicketUpdate</Item>
                <Item Key="Controller">OTRS</Item>
                <Item Key="ConfigDialog">AdminGenericInterfaceInvokerDefault</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="GenericInterface::Mapping::Module###OTRSIntegration" Required="1" Valid="1">
        <Description Translatable="1">GenericInterface module registration for the mapping layer.</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>GenericInterface::Mapping::ModuleRegistration</SubGroup>
        <Setting>
            <Hash>
                <Item Key="ConfigDialog">AdminGenericInterfaceMappingSimple</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="OTRSIntegration::UserLogin" Required="1" Valid="1">
        <Description Translatable="1">Agent conection user</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>Configuration</SubGroup>
        <Setting>
            <String Regex="">agentxyz</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="OTRSIntegration::Password" Required="1" Valid="1">
        <Description Translatable="1">Agent conection Password</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>Configuration</SubGroup>
        <Setting>
            <String Regex="">passwordxyz</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="OTRSIntegration::WebServiceName" Required="1" Valid="1">
        <Description Translatable="1">WebService Name of another OTRS</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>Configuration</SubGroup>
        <Setting>
            <String Regex="">OTRS</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="OTRSIntegration::InvokerNameArticleCreate" Required="1" Valid="1">
        <Description Translatable="1">Invoker Name Article Create</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>Configuration</SubGroup>
        <Setting>
            <String Regex="">ArticleCreate</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="OTRSIntegration::InvokerNameRemoteQueueUpdate" Required="1" Valid="1">
        <Description Translatable="1">Invoker Name Remote Queue Update</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>Configuration</SubGroup>
        <Setting>
            <String Regex="">RemoteQueueUpdate</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="OTRSIntegration::InvokerNameRemoteTicketUpdate" Required="1" Valid="1">
        <Description Translatable="1">Invoker Name Remote Ticket Update</Description>
        <Group>OTRSIntegration</Group>
        <SubGroup>Configuration</SubGroup>
        <Setting>
            <String Regex="">RemoteTicketUpdate</String>
        </Setting>
    </ConfigItem>
</otrs_config>
